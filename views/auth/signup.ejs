<div class="form-container">
  <h2>Sign Up</h2>
  <form action="/auth/signup" method="POST" >
   <div class="field">
     <input type="text" name="username" id="username" placeholder="*  User´s Name">
   </div>
   <div class="field">
     <input type="password" name="password" id="password" placeholder="*  Password">
   </div>
   <div class="field">
    <input type="text" name="barname" id="barname" placeholder="*  Bar´s Name">
   </div>
   <div class="field">
    <input type="number" step="any" name="price" id="price" placeholder="*  Price">
   </div>
   <div class="field ">
    <input type="text" step="any" name="address" placeholder="*  Address">
  </div>
  <div class="field ">
    <input type="text" step="any" name="hours" placeholder="Opening Hours">
  </div>
  <div class="field ">
    <input type="text" step="any" name="description" placeholder="Bar´s Description : Music, events, promotions, etc.">
  </div>
   <div class="field ">
    <button class="btn submit" id="reverse">Sign Up</button>
   </div>
   <% if (typeof message !== 'undefined') { %> <p class='error'><%= message %> </p> <% } %>
  </form>
  <a href="/auth/login">Already have an account? Login here</a>
</div>

