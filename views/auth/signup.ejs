<h2>Sign Up</h2>

<form action="/auth/signup" method="POST" >
 <div class="field">
   <label for="username"> User Name </label>
   <input type="text" name="username" id="username">
 </div>
 <div class="field">
   <label for="password"> Password </label>
   <input type="password" name="password" id="password">
 </div>
 <div class="field">
  <label for="barname"> Name of the Bar </label>
  <input type="text" name="barname" id="barname">
 </div>
 <div class="field">
  <label for="price"> Price </label>
  <input type="number" step="any" name="price" id="price">
 </div>
 <div class="field ">
  <label>Address</label>
  <input type="text" step="any" name="address" placeholder="address">
</div>
<div class="field ">
  <label for="hours">Open Hours</label>
  <input type="text" step="any" name="hours">
</div>
<div class="field ">
  <label for="description">BarÂ´s Description</label>
  <input type="text" step="any" name="description" placeholder="Music, events, promotions, kind of food, capacity, ">
</div>
 <div class="field ">
  <button class="btn submit">Sign Up</button>
 </div>
 <% if (typeof message !== 'undefined') { %> <p class='error'><%= message %> </p> <% } %>
</form>
<a href="/auth/login">Already have an eccount? Login here</a>


