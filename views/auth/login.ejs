<div class="form-container">
  <h2>Login</h2>
  <form action="/auth/login" method="POST" >
   <div class="field">
     <input type="text" name="username" id="username" placeholder="User´s Name">
   </div>
   <div class="field">
     <input type="password" name="password" id="password" placeholder="Password">
   </div>
   <div class="field control">
     <button class="btn submit cap" id="reverse">Login</button>
   </div>
   <% if (typeof message !== 'undefined') { %> <p class='error'><%= message %> </p> <% } %>
  </form>
  <a href="/auth/signup">Don´t have an account? Sign up here</a>
</div>

