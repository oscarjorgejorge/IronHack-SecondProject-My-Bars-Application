<h2>Edit your profile <%= username %> </h2>

<form action="/bar/profile" method="POST" >
 <div class="field">
  <label for="barname"> Name of the Bar </label>
  <input type="text" name="barname" id="barname" value="<%= barname %>">
 </div>
 <div class="field">
  <label for="price"> Price </label>
  <input type="number" step="any" name="price" id="price" value="<%= price %>">
 </div>
 <div class="field">
   <label for="address">Address</label>
   <input type="text" step="any" name="address" placeholder="address" value="<%= address %>">
</div>
<div class="field ">
  <label for="hours">Open Hours</label>
  <input type="text" step="any" name="hours" value="<%= hours %>">
</div>
<div class="field ">
  <label for="description">BarÂ´s Description</label>
  <input type="text" step="any" name="description" placeholder="Music, events, promotions, kind of food, capacity, "value="<%= description %>">
</div>
  <% if (typeof message !== 'undefined') { %> <p class='error'><%= message %> </p> <% } %>
 <div class="field">
  <button class="btn submit">Save</button>
 </div>
</form>

