<h2>Edit</h2>

<form action="/bar/profile" method="POST" >
 <div class="field">
   <label for="username"> User Name </label>
   <input type="text" name="username" id="username" value="<%= username %>">
 </div>
 <div class="field">
  <label for="barname"> Name of the Bar </label>
  <input type="text" name="barname" id="barname" value="<%= barname %>">
 </div>
 <div class="field">
  <label for="price"> Price </label>
  <input type="number" step="any" name="price" id="price" value="<%= price %>">
 </div>
  
 <div class="field control">
  </div>
  <label>Address</label>
  <input type="text" step="any" name="address" placeholder="address" value="<%= address %>">
  <% if (typeof message !== 'undefined') { %> <p class='error'><%= message %> </p> <% } %>
 <div class="field control">
  <button class="btn submit">Save</button>
 </div>
</form>

